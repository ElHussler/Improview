@{
    ViewBag.Title = "Home Page";
}

<div class="jumbotron">
    <div class="row">
        <div class="col-md-5">
            <h1>Improview <sup>&alpha;</sup></h1>
        </div>
        <div class="col-md-7" style="float:right; padding-top:1em;">
            <p>
                > Practice your interview technique<br />
                > Record and store video responses for peer review<br />
                > Get fast, concise, and objective performance feedback
            </p>
        </div>
    </div>
</div>

<div class="row">
    <div class="col-md-4">
        <h2>Start a mock interview</h2>
        <p>Register an account to take your first 'Improview' interview, no recruitment agents required!</p>
        @Html.ActionLink("Begin Interview", "Index", "Interview", null, new { @class = "btn btn-default" })
    </div>
    <div class="col-md-4">
        <h2>View and rate responses</h2>
        <p>See how others have responded to questions, rate their answers, and comment to give them feedback.</p>
        @Html.ActionLink("Review Responses", "Index", "Review", null, new { @class = "btn btn-default" })
    </div>
</div>